# NTU-eureka
CUDA_PATH       /software/cuda/default
FFTW2_PATH      /software/fftw/2.1.5-gnu-9.3.0-openmpi-4.1.1-ucx_mt
FFTW3_PATH      /software/fftw/3.3.10-gnu-9.3.0-openmpi-4.1.1-ucx_mt
